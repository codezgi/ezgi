//4 most important consepts in oop is:
//polymorphizm,abstraction,inheritance,encapsulation
//encapsulation is idea of bundeling or type together data + we do this for to modify and acces our data(setters and getters )
#include <iostream>
using namespace std;
class employee{
private:
string name;
string company;
int age;
public:
void setName(string Name){
  name = Name;
}
string getName(){
  return name;
}
void setCompany(string Company){
    company = Company;

}
string getCompany(){
    return company;

}
void setAge(int Age){
    age = Age;

}
int getAge(){
    return age;
}
void IntroduceYourSelf(){
    cout<<"name : "<<name<<" company : "<<company<<" age : "<<age<<endl;
    }

    employee(string Name,string Company, int Age){
       name=Name;
       company=Company;
       age=Age;
    }


};
int main(){
    employee emp1=employee("ezgi","amazon",20);
    emp1.IntroduceYourSelf();

    return 0;

} 
