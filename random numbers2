#include <iostream>
using namespace std;
#include <iomanip>
using std::setw;
#include <cstdlib>
using std::rand;
int main(){
  int frenk1=0;
  int frenk2=0;
  int frenk3=0;
  int frenk4=0;
  int frenk5=0;
  int frenk6=0;
  int face;
  for(int roll =1; roll<=6000000; roll++){
    face= 1+rand()%6;//random number 1 to 6
  
  switch(face){
    case 1:
    ++frenk1;
    break;
    case 2:
    ++frenk2;
    break;
    case 3:
    ++frenk3;
    break;
    case 4:
    ++frenk4;
    break;
    case 5:
    ++frenk5;
    break;
    case 6:
    ++frenk6;
    break;
    default:
    cout<<"program should never get here !";
     }
 }
 cout<<"face "<<setw(13)<<"frequency"<<endl;
 cout<<"  1"<<setw(13)<<frenk1;
 cout<<"  2"<<setw(13)<<frenk2;
 cout<<"  3"<<setw(13)<<frenk3;
 cout<<"  4"<<setw(13)<<frenk4;
 cout<<"  5"<<setw(13)<<frenk5;
 cout<<"  6"<<setw(13)<<frenk6<<endl;
  return 0;
}





  
