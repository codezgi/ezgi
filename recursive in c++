#include <iostream>
using namespace std;
//sum numbers between m and n 
int recursiveSum(int m, int n)
{
  if(m==n)
  return n;
  return m+ recursiveSum(m+1,n);//2+(3+(4)) like for loops (m i arrtırarak n le aynı seiyeye gelmesini sağlıyo bunun kontrolünü if yapıyo is m==n than stop)


}
int main(){
    int m=1;
    int n=5;
    cout<<"sum : "<<recursiveSum(m,n);
   /* int sum=0;
    for(int i=m;i<=n;i++)
    {
      sum+=i; 
    }
    cout<<"sum = "<<sum<<endl;*/

    return 0;

}
